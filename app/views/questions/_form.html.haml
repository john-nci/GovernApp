= form_for [@poll, @question] do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :kind
    = f.text_field :kind
  .field
    = f.label :poll
    = f.text_field :poll
  .actions
    = f.submit 'Save'

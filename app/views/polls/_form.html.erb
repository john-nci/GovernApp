<%= form_for @poll do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:" %>
      </h2>
      <ul>
        <% @poll.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br/>
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
